# @configure_input@

# Package-specific substitution variables
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)

# Package-specific subst. variables
prefix	    = @prefix@
exec_prefix = @exec_prefix@
bindir	    = @bindir@

# VPATH-Specific subst. variables
srcdir = @srcdir@
VPATH =  @srcdir@

# Tool-Specific subst. variables
CC       = @CC@
libs     = @LIBS@
CFLAGS   = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
INSTALL         = @INSTALL@
INSTALL_DATA    = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT  = @INSTALL_SCRIPT@

all: tclcompiler tclparser

tclcompiler:
	cd $(srcdir)/lib/tclcompiler && $(MAKE) all

tclparser:
	cd $(srcdir)/lib/tclparser && $(MAKE) all

clean:
	cd $(srcdir)/lib/tclcompiler && $(MAKE) $@
	cd $(srcdir)/lib/tclparser && $(MAKE) $@

